<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        <%- style %>
        <!-- telling where to place style tag in layouts -->
    </head>
    <body>
        
        <%- include("_header") -%> 
        <!-- implimenting partial concept -->

        
      
       <main id="layout-main">
            <%- body -%> 
            <!-- telling where the variable part will be -->
            <!-- so whatever file my controller is rendering will be filled here-->
       </main>

        <%- include("_footer") -%>
        <!-- implimenting partial concept -->
       
        <%- script %>
        <!-- telling where to place script tag in layouts -->
        
        <script>
                <% if(flash.success && flash.success.length > 0){ %>
                    new Noty({
                        theme:'relax',
                        text: '<%= flash.success %>',
                        type:'success',
                        layout:'topRight',
                        timeout:1500
                    }).show();   
               <% } %>

               <% if(flash.error && flash.error.length > 0){ %>
                    new Noty({
                        theme:'relax',
                        text: '<%= flash.error %>',
                        type:'error',
                        layout:'topRight',
                        timeout:1500
                    }).show();   
               <% } %>
        </script>

    </body>
</html>